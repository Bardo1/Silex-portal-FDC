    <div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form class="form-horizontal" action="{{ app.url_generator.generate('setcontra') }}" method="post">
                        <fieldset>
                        <!-- Form Name -->
                            <legend>Cambiar contraseña</legend>
                            <label>Bienvenido nuevamente {{ usuario.email }}</label>
                            <div class="control-group">
                                <label>{{ usuario.id }}</label>
                                <input   type="hidden" id="id" name="id"  value="{{ usuario.id }}" size=70   placeholder="" class="input-xlarge" required>
                                <label class="control-label" for="textinput">Ingrese su nueva contraseña</label>
                                <div class="controls">
                                    <input id="Npassword" name="Npassword" type="text" placeholder="@" class="input-xlarge" required>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="textinput">Repita contraseña</label>
                                <div class="controls">
                                    <input id="Npassword1" name="Npassword1" type="text" placeholder="@" class="input-xlarge" required>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="singlebutton"></label>
                                <div class="controls">
                                    <button id="Enviar" name="Enviar" class="btn btn-primary">Enviar</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
